---
import { getCollection } from "astro:content"

import Layout from "@layouts/Layout.astro"

const blogs = await getCollection("blogs", ({ data }) => {
	return data.draft === false
})
const sorted = blogs.sort((a, b) => a.data.date.getTime() - b.data.date.getTime())
---

<Layout
	title="Blog | ppalone"
	description="Welcome to Pranjal's digital garden"
>
	<p>Welcome to Pranjal's digital garden ðŸŒ±</p>

	<p>Hi there! I'm Pranjal Alone aka ppalone. I'm full stack web developer. I made this blog to share my learnings with the world.

	</p>

	<!-- Blog posts -->
	<div>
		<div>
			<h2>Blog</h2>
		</div>
		{
			sorted.map(blog => {
				return <div>
					<a href={"/blogs/" + blog.slug}>{blog.data.title}</a>
				</div>
			})
		}
	</div>
	
</Layout>